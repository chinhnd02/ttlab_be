{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build"
        },
        {
            "src": "src/main.ts",
            "use": "@vercel/node",
            "config": { "includeFiles": "dist/**" }
        },
        {
            "src": "dist/main.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/main.ts",
            "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"]
        },
        {
            "src": "/(.*)",
            "dest": "dist/main.js"
        }
    ]
}
